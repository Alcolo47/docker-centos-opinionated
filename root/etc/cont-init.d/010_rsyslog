#!/usr/bin/with-contenv sh

rm -Rf /etc/services.d/010_rsyslog
if test "${DCO_RSYSLOG_START}" = "1"; then
    cp -Rf /etc/services.d.dco/010_rsyslog /etc/services.d/
    if test "${DCO_RSYSLOG_REMOTE_HOST}" != "null"; then
        echo "# AUTOGENERATED FROM remote.template => DO NOT MODIFY HERE" >/etc/rsyslog.d/remote.conf
        cat /etc/rsyslog.d/remote.template |envtpl >>/etc/rsyslog.d/remote.conf
    else
        rm -f /etc/rsyslog.d/remote.conf
    fi
    echo "# AUTOGENERATED FROM file.template => DO NOT MODIFY HERE" >/etc/rsyslog.d/file.conf
    cat /etc/rsyslog.d/file.template |envtpl >>/etc/rsyslog.d/file.conf
fi
